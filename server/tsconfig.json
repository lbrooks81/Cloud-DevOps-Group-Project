{
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "commonjs"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
